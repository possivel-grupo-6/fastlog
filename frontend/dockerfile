# Use uma imagem oficial do Node.js como base para build
FROM node:16 AS build

# Defina o diretório de trabalho no container
WORKDIR /app

# Copie o arquivo de dependências para o container
COPY package*.json ./

# Instale as dependências
RUN npm install

# Copie o restante do código para o container
COPY . .

# Builda a aplicação para produção
RUN npm run build

# Use uma imagem Nginx para servir os arquivos estáticos
FROM nginx:alpine

# Copie os arquivos buildados para o diretório padrão do Nginx
COPY --from=build /app /usr/share/nginx/html

# Exponha a porta 80
EXPOSE 8080

# Comando para iniciar o servidor Nginx
CMD ["nginx", "-g", "daemon off;"]
