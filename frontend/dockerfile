# Etapa de construção
FROM node:18 AS build

# Defina o diretório de trabalho para o frontend
WORKDIR /app

# Copia o package.json e o package-lock.json para o diretório de trabalho
COPY frontend/package*.json ./

# Instala as dependências do projeto
RUN npm install

# Copia o código-fonte do frontend para o contêiner
COPY frontend/ ./

# Executa o build da aplicação React e verifica os logs
RUN npm run build || (echo "Erro ao executar npm run build" && exit 1)

# Etapa de produção
FROM nginx:alpine

RUN ls -lt /app


# Copia os arquivos de build do frontend para o diretório de arquivos estáticos do Nginx
COPY --from=build /app/build /usr/share/nginx/html

# Expondo a porta 8080
EXPOSE 8080

# Comando para iniciar o Nginx
CMD ["nginx", "-g", "daemon off;"]
