# Usando uma imagem Node.js para build
FROM node:18 AS builder
WORKDIR /app
COPY ./frontend .
RUN npm install && npm run build
RUN ls -lt /app

# Usando uma imagem leve para servir o conteúdo estático
FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html
EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]
