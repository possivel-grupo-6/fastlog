# Etapa de construção
FROM node:18 AS build

WORKDIR /app

# Copia o package.json e instala as dependências
COPY ./frontend/package*.json ./
RUN npm install

# Copia o restante dos arquivos e gera a build
COPY ./frontend ./
RUN npm run build

# Lista o conteúdo do diretório /app para garantir que o build tenha sido criado
RUN ls -la /app/build

# Etapa de produção
FROM nginx:alpine

# Copia os arquivos de build para o diretório do Nginx
COPY --from=build /app/build /usr/share/nginx/html

# Expondo a porta 8080
EXPOSE 8080

CMD ["nginx", "-g", "daemon off;"]
